<div class="devise">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <p><%= f.label :username, class: "form_title" %><br />
      <%= f.text_field :username, class: "form_field" %></p> 
      <%= f.label :email, class: "form_title" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form_field" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "form_title" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form_field" %>
    </div>

  <div class="field">
  <%= f.label :avatar %>
  <%=f.file_field :avatar %>
</div>

    <div class="field">
      <%= f.label :password_confirmation, class: "form_title" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form_field" %>
    </div>

      <div class="field">
      <%= f.label :location, class: "form_title" %><br />
      <%= f.text_field :location, class: "form_field"%>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
</div>